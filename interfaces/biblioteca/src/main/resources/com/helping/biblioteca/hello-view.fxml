<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.helping.biblioteca.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label fx:id="idLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Título:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Label fx:id="tituloLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Autor:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label fx:id="autorLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="ISBN:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Label fx:id="isbnLabel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Páginas:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <Label fx:id="paginasLabel" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <Label text="Género:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <Label fx:id="generoLabel" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

        <Label text="Disponible:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <Label fx:id="disponibleLabel" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="prevButton" onAction="#onPrevButtonClick" text="Anterior"/>
        <Button fx:id="nextButton" onAction="#onNextButtonClick" text="Siguiente"/>
    </HBox>

    <Button text="Mostrar Géneros" onAction="#onShowGenerosClick"/>
</VBox>
