<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme._03_Menu_Principal">

        <!-- Login Activity - TEMA CLARO (Actividad principal/launcher) -->
        <activity
            android:name=".datastore.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.Login"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- User Register Activity - TEMA CLARO -->
        <activity
            android:name=".datastore.UserRegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.Login"
            android:screenOrientation="fullSensor" />

        <!-- Menu Activity -->
        <activity
            android:name=".MenuActivity"
            android:exported="false" />

        <!-- Cine -->
        <activity
            android:name=".cine.ListaPeliculasActivity"
            android:exported="false" />

        <!-- Settings -->
        <activity
            android:name=".settings.SettingsActivity"
            android:exported="false" />

        <!-- Fragments -->
        <activity
            android:name=".Fragments.FragmentActivity"
            android:exported="false" />

        <!-- Superhero -->
        <activity
            android:name=".superhero.detalle.DetalleHeroeActivity"
            android:exported="false" />
        <activity
            android:name=".superhero.RegisterActivity"
            android:exported="false" />

        <!-- Calculadora -->
        <activity
            android:name=".Calculadora"
            android:exported="false" />

        <!-- Quiz -->
        <activity
            android:name=".Quiz.quizmain"
            android:exported="false" />
        <activity
            android:name=".Quiz.QuestionAnswerdMain"
            android:exported="false" />
        <activity
            android:name=".Quiz.Finish"
            android:exported="false" />

        <!-- API Razas -->
        <activity
            android:name=".ApiRazas.RazasApiActivity"
            android:exported="false" />

        <!-- Preferences -->
        <activity
            android:name=".preferences.UserPreferencesActivity"
            android:exported="false" />

        <!-- File Provider -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>

</manifest>